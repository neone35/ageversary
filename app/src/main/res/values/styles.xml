<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="actionBarStyle">@style/actionBarCustom</item>
    </style>

    <style name="actionBarCustom" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="elevation">2dp</item>
    </style>

    <style name="actionBarTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryDarkColor</item>
    </style>

    <style name="profileName" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/whiteColor</item>
    </style>

    <style name="profileAge" parent="profileName">
        <item name="android:textColor">@color/primaryDarkestColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="yearProgress" parent="profileAge">
        <item name="android:textSize">18sp</item>
    </style>

</resources>
